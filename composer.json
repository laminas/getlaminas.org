{
    "name": "laminas/getlaminas.org",
    "description": "Laminas Project Website",
    "type": "project",
    "homepage": "https://getlaminas.org",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "zf",
        "zendframework"
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "support": {
        "issues": "https://github.com/laminas/getlaminas.org/issues",
        "source": "https://github.com/laminas/getlaminas.org",
        "rss": "https://github.com/laminas/getlaminas.org/releases.atom",
        "slack": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "require": {
        "php": "~8.0.0",
        "ext-pdo": "*",
        "dflydev/fig-cookies": "^3.0",
        "laminas/laminas-component-installer": "^2.8",
        "laminas/laminas-config-aggregator": "^1.8",
        "laminas/laminas-diactoros": "^2.14.0",
        "laminas/laminas-feed": "^2.18.1",
        "laminas/laminas-paginator": "^2.13",
        "laminas/laminas-servicemanager": "^3.16",
        "laminas/laminas-stdlib": "^3.11.0",
        "league/commonmark": "^2.3.5",
        "mezzio/mezzio": "^3.11.0",
        "mezzio/mezzio-fastroute": "^3.5",
        "mezzio/mezzio-helpers": "^5.8.0",
        "mezzio/mezzio-platesrenderer": "^2.4",
        "mezzio/mezzio-problem-details": "^1.6",
        "monolog/monolog": "^1.27.1",
        "phly/phly-configfactory": "^1.1",
        "phly/phly-event-dispatcher": "^1.2",
        "spatie/yaml-front-matter": "^2.0.7",
        "symfony/console": "^5.4.11",
        "symfony/yaml": "^5.4.11"
    },
    "require-dev": {
        "filp/whoops": "^2.14.5",
        "laminas/laminas-development-mode": "^3.3",
        "mezzio/mezzio-tooling": "^1.4",
        "phpunit/phpunit": "^9.5.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6.2"
    },
    "replace": {
        "laminas/laminas-zendframework-bridge": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "GetLaminas\\Blog\\": "src/Blog/",
            "GetLaminas\\ReleaseFeed\\": "src/ReleaseFeed/",
            "GetLaminas\\Security\\": "src/Security/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "scripts": {
        "build": [
            "@build-blog",
            "./bin/console security:build"
        ],
        "build-blog": [
            "./bin/console blog:seed-db",
            "./bin/console blog:feed-generator",
            "./bin/console blog:generate-search-data"
        ],
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "expressive": "expressive --ansi",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
