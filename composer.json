{
    "name": "laminas/getlaminas.org",
    "description": "Laminas Project Website",
    "type": "project",
    "homepage": "https://getlaminas.org",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "zf",
        "zendframework"
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1.99"
        },
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "composer/package-versions-deprecated": true,
            "laminas/laminas-dependency-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laminas": {
            "component-ignore-list": [
                "mezzio/mezzio-tooling"
            ]
        }
    },
    "support": {
        "issues": "https://github.com/laminas/getlaminas.org/issues",
        "source": "https://github.com/laminas/getlaminas.org",
        "rss": "https://github.com/laminas/getlaminas.org/releases.atom",
        "slack": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "require": {
        "php": "~8.1.0",
        "ext-pdo": "*",
        "dflydev/fig-cookies": "^3.0",
        "laminas/laminas-cli": "^1.7",
        "laminas/laminas-component-installer": "^3.0.1",
        "laminas/laminas-config-aggregator": "^1.11",
        "laminas/laminas-diactoros": "^2.20.0",
        "laminas/laminas-feed": "^2.19.0",
        "laminas/laminas-paginator": "^2.15.0",
        "laminas/laminas-servicemanager": "^3.19",
        "laminas/laminas-stdlib": "^3.15.0",
        "league/commonmark": "^2.3.6",
        "mezzio/mezzio": "^3.13.0",
        "mezzio/mezzio-fastroute": "^3.7",
        "mezzio/mezzio-helpers": "^5.11.0",
        "mezzio/mezzio-platesrenderer": "^2.6",
        "mezzio/mezzio-problem-details": "^1.9.0",
        "monolog/monolog": "^3.2.0",
        "phly/phly-configfactory": "^1.1",
        "phly/phly-event-dispatcher": "^1.2",
        "spatie/yaml-front-matter": "^2.0.7",
        "symfony/console": "^6.1.7",
        "symfony/yaml": "^6.1.6"
    },
    "require-dev": {
        "filp/whoops": "^2.14.5",
        "laminas/laminas-coding-standard": "^2.3",
        "laminas/laminas-development-mode": "^3.3",
        "mezzio/mezzio-tooling": "^2.6",
        "phpunit/phpunit": "^9.5.12",
        "psalm/plugin-phpunit": "^0.17.0",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^4.7"
    },
    "replace": {
        "laminas/laminas-zendframework-bridge": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "GetLaminas\\Blog\\": "src/Blog/",
            "GetLaminas\\ReleaseFeed\\": "src/ReleaseFeed/",
            "GetLaminas\\Security\\": "src/Security/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "scripts": {
        "build": [
            "@build-blog",
            "laminas security:build"
        ],
        "build-blog": [
            "laminas blog:seed-db",
            "laminas blog:feed-generator",
            "laminas blog:generate-search-data"
        ],
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
